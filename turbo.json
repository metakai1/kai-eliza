{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.json"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**",
                ".turbo/**"
            ],
            "inputs": [
                "src/**/*.{ts,tsx,json}",
                "package.json",
                "tsconfig.json",
                "tsup.config.ts"
            ],
            "cache": true,
            "env": ["NODE_ENV"]
        },
        "@ai16z/plugin-unreal#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "inputs": [
                "src/**/*.{ts,tsx}",
                "package.json",
                "tsconfig.json",
                "tsup.config.ts"
            ],
            "cache": true
        },
        "@ai16z/plugin-unreal-dev#build": {
            "dependsOn": ["@ai16z/plugin-unreal#build"],
            "outputs": ["dist/**"],
            "inputs": [
                "src/**/*.{ts,tsx}",
                "package.json",
                "tsconfig.json",
                "tsup.config.ts"
            ],
            "cache": true
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**/*.{ts,tsx}",
                "test/**/*.{ts,tsx}",
                "package.json"
            ],
            "outputs": [
                ".turbo/**",
                "coverage/**"
            ],
            "cache": true,
            "env": ["NODE_ENV", "CI"]
        }
    },
    "globalEnv": ["TURBO_TEAM", "TURBO_TOKEN"]
}
